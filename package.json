{
  "name": "scroll-back-button",
  "version": "0.0.1",
  "author": "bre97-npm",
  "description": "A lit web component. A Web Component for any framework, this component does not provide any style and structure. Please provide the structure inside the scroll-back-button tag. Provides the function of scrolling up and down to the bottom.",
  "keywords": [
    "button",
    "go-top",
    "scroll",
    "scroll-back"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bre97-web/scroll-back-button"
  },
  "license": "MIT",
  "homepage": "https://bre97-web.github.io/scroll-back-button",
  "bugs": "https://github.com/bre97-web/scroll-back-button/issues",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "build:css-to-ts": "wireit",
    "build:demo": "tsc && vite build",
    "css": "node ./config/css-to-ts.js",
    "ts": "tsc --pretty",
    "publish:npm": "node ./config/publish-to-npm.js && npm run format:json",
    "publish:gpr": "node ./config/publish-to-gpr.js && npm run format:json",
    "format:json": "npx prettier --write package.json",
    "dev": "vite",
    "test": "exit 0"
  },
  "type": "module",
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "!config/**",
    "!docs/**",
    "!vite.config.ts",
    "!demo/**",
    "!**/test/**",
    "!**/*_test.*",
    "!.wireit/**"
  ],
  "dependencies": {
    "lit": "^2.8.0",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "glob": "^10.3.3",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "wireit": "^0.10.0"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:ts": {
      "command": "node css-to-ts.js && tsc --pretty",
      "files": [
        "tsconfig.json",
        "**/*.ts",
        "!config/**",
        "!**.config.ts",
        "!**.config.js",
        "!**/*.d.ts",
        "!**/*.css.ts"
      ],
      "output": [
        ".tsbuildinfo",
        "**/*.js",
        "**/*.js.map",
        "**/*.d.ts",
        "!config/",
        "!types/"
      ],
      "clean": "if-file-deleted"
    },
    "build:css-to-ts": {
      "command": "node css-to-ts.js",
      "files": [
        "css-to-ts.js"
      ],
      "output": [
        "**/*.css.ts"
      ],
      "clean": "if-file-deleted"
    }
  }
}
